{
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.clang_format_fallbackStyle": "Mozilla",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.clang_format_style": "Mozilla",
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "readability-identifier-length",
        "readability-named-parameter",
        "readability-redundant-access-specifiers"
    ],
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "cppcoreguidelines-init-variables",
        "readability-*"
    ],
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.exclude": {
        "/usr/**": true,
        "**/*_test.cpp": true
    },
    "C_Cpp.codeAnalysis.runAutomatically": true,
    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.parameterNames.suppressWhenArgumentContainsName": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "[c++]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.insertFinalNewline": true
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker",
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-containers",
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.insertFinalNewline": true
    },
    "[sql]": {
        "editor.formatOnSave": false,
        "editor.tabSize": 2,
        "files.insertFinalNewline": true
    },
    "cSpell.words": [
        "rclcpp"
    ],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "googletest.failed",
                "settings": {
                    "foreground": "#f00"
                }
            },
            {
                "scope": "googletest.passed",
                "settings": {
                    "foreground": "#0f0"
                }
            },
            {
                "scope": "googletest.run",
                "settings": {
                    "foreground": "#00f"
                }
            }
        ]
    },
    "files.watcherExclude": {
        // * Don't observe this list
        // * Disable: autoSave, formatOnSave
        // Default Settings
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/bin": true,
        "**/obj": true,
        "**/build": true,
        "**/install": true,
        "**/log": true,
    },
    "github.copilot.enable": {
        "*": false,
        "cpp": true
    },
    "gtest-adapter.debugConfig": [
        "UnitTest"
    ],
    "gtest-adapter.supportLocation": true,
    "sql-formatter.uppercase": true
}
